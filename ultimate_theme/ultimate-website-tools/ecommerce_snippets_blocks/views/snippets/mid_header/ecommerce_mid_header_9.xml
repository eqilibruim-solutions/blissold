<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template name="Ecommerce Mid Header 9" id="ecommerce_mid_header_9">
        <section class="pt8 pb8 bg-danger oe_custom_bg text-center" id="mid-header-top-9">
            <div class="container">
                <div class="oe_structure oe_empty">
                    <span>
                        50% OFF IN-STOCK ITEMS* OR GO BIGGER - 60% OFF
                        $3000+ WITH CODE
                        MAGENTECH
                    </span>
                </div>
            </div>
        </section>
        <section class="bg-dark oe_custom_bg pt-1 pb-1" id="mid-header-middle-9">
            <div class="container">
                <div class="row">
                    <div class="col-12 oe_structure col-lg-4 col-md-2 col-sm-12 pt8 pb8 align-self-center text-center text-lg-left text-md-left"
                         id="mid-header-middle-left">
                        <li class="list-inline-item">
                            <div class="oe_structure oe_empty">
                                <span class="welcome-text">Add Pricelist</span>
                            </div>
                        </li>
                    </div>
                    <div class="col-12 col-lg-8 col-md-10 col-sm-12  oe_structure pt8 pb8 text-center text-lg-right text-md-right"
                         id="mid-header-middle-right">
                        <li class="list-inline-item ml8 mr8 border-beta border-right hide_border pr-2 pt8 pb8">
                            <div class="oe_structure oe_empty">
                                <span>
                                    Follow Us :
                                    <a t-att-href="res_company.social_facebook"
                                       t-if="res_company.social_facebook"
                                       class="fa_company_contact_links"
                                       target="_blank">
                                        <i class="fa fa-x mx-1 text-white fa-facebook share_facebook fa_company_contact_info"/>
                                    </a>
                                    <a t-att-href="res_company.social_twitter"
                                       t-if="res_company.social_twitter"
                                       class="fa_company_contact_links"
                                       target="_blank">
                                        <i class="fa fa-x mx-1 text-white fa-twitter share_twitter fa_company_contact_info"/>
                                    </a>
                                    <a t-att-href="res_company.social_linkedin"
                                       t-if="res_company.social_linkedin"
                                       class="fa_company_contact_links"
                                       target="_blank">
                                        <i class="fa fa-x mx-1 text-white fa-linkedin share_linkedin fa_company_contact_info"/>
                                    </a>
                                    <a t-att-href="res_company.social_youtube"
                                       t-if="res_company.social_youtube"
                                       class="fa_company_contact_links"
                                       target="_blank">
                                        <i class="fa fa-x mx-1 text-white fa-youtube-play share_youtube fa_company_contact_info"/>
                                    </a>
                                    <a t-att-href="res_company.social_instagram"
                                       t-if="res_company.social_instagram"
                                       rel="publisher"
                                       class="fa_company_contact_links"
                                       target="_blank">
                                        <i class="fa fa-x mx-1 text-white fa-instagram share_instagram fa_company_contact_info"/>
                                    </a>
                                </span>
                            </div>
                        </li>
                        <li class="list-inline-item account_custom">
                            <div class="dropdown">
                                <a class="btn btn-link text-white dropdown-toggle"
                                   type="button"
                                   id="dropdownMenu1"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user-circle mr-1"/>
                                    <span>MY ACCOUNT</span>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">

                                    <a class="text-xs-center dropdown-item" href="/web/login"
                                       id="ultimate_sign_in">
                                        Sign in
                                    </a>
                                    <a href="/web/signup" class="text-xs-center dropdown-item"
                                       id="ultimate_register">
                                        <span>Register</span>
                                    </a>

                                    <a href="/my/home" role="menuitem" class="dropdown-item"
                                       id="ultimate_my_account">My
                                        Account
                                    </a>
                                    <a class="dropdown-item"
                                       t-attf-href="/web/session/logout?redirect=/" role="menuitem"
                                       id="ultimate_logout">
                                        Logout
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li id="my_cart" class="list-inline-item">
                            <div class="oe_structure oe_empty">
                                <div class="d-flex">
<!--                                    <t t-set="website_sale_order"-->
<!--                                       t-value="website.sale_get_order()"/>-->
                                    <a href="/shop/cart" class="text-white">
                                        <i class="fa fa-opencart mr-1"></i>
                                        MY CART
                                        <!--                                <sup t-attf-class="my_cart_quantity badge badge-primary"-->
                                        <!--                                     t-esc="website_sale_order and website_sale_order.cart_quantity or ''"/>-->
                                    </a>
                                </div>
                            </div>
                        </li>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-white oe_custom_bg" id="mid-header-bottom-9">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-4 col-lg-4 pt8 pb8 align-self-center oe_structure"
                         id="mid-header-bottom-left">
                        <div class="oe_structure oe_empty">
                            <span>
                                <t t-if="category">
                                    <form
                                            t-att-action="keep('/shop'+ ('/category/'+slug(category)) if category else '', search=0)"
                                            method="get"
                                            t-att-class="search_class">

                                        <t t-if="attrib_values">
                                            <t t-foreach="attrib_values"
                                               t-as="a">
                                                <input type="hidden"
                                                       name="attrib"
                                                       t-att-value="'%s-%s' % (a[0], a[1])"/>
                                            </t>
                                        </t>
                                        <div class="input-group">
                                            <input type="text" name="search"
                                                   class="search-query form-control oe_search_box search_input"
                                                   placeholder="Enter Keyword to Search..."
                                                   t-att-value="search"/>
                                            <div class="input-group-append">
                                                <button type="submit"
                                                        class="btn btn-dark oe_search_button search_button"
                                                        aria-label="Search" title="Search">
                                                    <i class="fa fa-search text-white"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </t>
                                <t t-if="not category">
                                    <form action="/shop" method="get"
                                          t-att-class="search_class">

                                        <t t-if="attrib_values">
                                            <t t-foreach="attrib_values"
                                               t-as="a">
                                                <input type="hidden"
                                                       name="attrib"
                                                       t-att-value="'%s-%s' % (a[0], a[1])"/>
                                            </t>
                                        </t>
                                        <div class="input-group">
                                            <input type="text" name="search"
                                                   class="search-query form-control oe_search_box search_input"
                                                   placeholder="Enter Keyword to Search..."
                                                   t-att-value="search"/>
                                            <div class="input-group-append">
                                                <button type="submit"
                                                        class="btn btn-dark oe_search_button search_button"
                                                        aria-label="Search" title="Search">
                                                    <i class="fa fa-search text-white"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </t>
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-4 col-md-4 pt8 pb8 text-center text-md-center text-lg-center oe_structure"
                         id="mid-header-bottom-center">
                        <div class="oe_structure oe_empty">
                            <a href="/" class="img-fluid">
                                <img src="/logo.png"
                                     t-att-alt="'Logo of %s' % res_company.name"
                                     t-att-title="res_company.name"/>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-4 col-md-4 pt8 pb8 text-center text-md-right text-lg-right oe_structure"
                         id="mid-header-bottom-right">
                        <div class="oe_structure oe_empty">
                            <div class="d-flex justify-content-center justify-content-lg-end mt-2">
                                <i class="fa fa-2x pt-2 pe-7s-call fa-500px"></i>
                                <div class="text-left">
                                    <span class="pl-2">
                                        Call us Now :
                                        <span t-field="res_company.phone"/>
                                        <br/>
                                        <span class="pl-2">
                                            <span t-field="res_company.email"/>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>