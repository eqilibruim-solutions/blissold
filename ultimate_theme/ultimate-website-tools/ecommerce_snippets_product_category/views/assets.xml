<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- ==================================== Scss ================================= -->
    <template id="ecommerce_snippets_product_category_assets"
              name="Product Category Assets"
              inherit_id="website.assets_frontend" active="True">
        <xpath expr="." position="inside">
           <link href="/ecommerce_snippets_product_category/static/src/scss/product_category_carousel.scss"
                  type="text/scss" rel="stylesheet"/>

            <link href="/ecommerce_snippets_product_category/static/src/scss/category_carousel_design.scss"
                  type="text/scss" rel="stylesheet"/>
        </xpath>
    </template>
    <template id="snippet_id_category_carousel" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_category_carousel" class="o_panel">
                <div class="o_panel_header">
                    <i class="fa fa-th-large"/>
                    Category Carousel
                </div>
                <div class="o_panel_body">
                    <t t-snippet="ecommerce_snippets_product_category.s_product_category_carousel_header_d1"
                       t-thumbnail="/ecommerce_snippets_product_category/static/src/img/snippet-icons/category_carousel/category-carousel-d1.png"/>
                    <t t-snippet="ecommerce_snippets_product_category.s_product_category_carousel_header_d2"
                       t-thumbnail="/ecommerce_snippets_product_category/static/src/img/snippet-icons/category_carousel/category-carousel-d2.png"/>
