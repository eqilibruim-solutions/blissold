<odoo>

    <template id="customize_theme_ecommerce_frontend_assets" name="Theme Assets 1"
              inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss"
                  href="/customize_theme_ecommerce/static/src/scss/common.scss"/>
        </xpath>
    </template>


    <template id="demo_frontend_style_snippets"
              name="Theme Shop Style Snippets"
              inherit_id="website.assets_frontend" active="True">
