<odoo>
    <data>

        <!--Snippet Sale Start-->
        <template id="coffee_sale" name="Coffee Sale">
            <section class="pt64 pb64" id="ecommerce_block_1">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-4 col-lg-4 col-sm-6 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_coffee_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content">
                                    <h2 style="text-align: center; ">
                                        <font color="#ffffff">
                                            <span style="font-size: 24px;">ENJOY GREAT ICED COFFEE</span>
                                        </font>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 col-sm-6 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_coffee_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content">
                                    <h2 style="text-align: center; ">
                                        <font color="#ffffff" style="font-size: 24px;">THE PURSUIT OF THE PERFECT
                                            COFFEE
                                        </font>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 col-sm-6 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_coffee_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content">
                                    <h2 style="text-align: center; ">
                                        <font color="#ffffff">
                                            <span style="font-size: 24px;">FRESHLY ROASTED WHOLE BEAN COFFEES</span>
                                        </font>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Sale End-->

        <!--Snippet Promo Image Start-->
        <template id="coffee_promo_image" name="Coffee Promo Image">
            <section class="pt64 pb64 oe_img_bg oe_custom_bg"
                     style="background-image: url(&quot;/theme_coffee_ecommerce_ultimate_01/static/src/img/placeholder-image-1170.jpg&quot;);">
                <div class="container">
                    <div class="row justify-content-left">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 right bg-light text-center pt64 pb64 bg-alpha"
                             style="">
                            <h2>
                                <font style="color: rgb(255, 255, 255);">TRY THE BEST COFFEE IN THE CITY</font>
                            </h2>
                            <a href="#" class="mb64 mt64 text-decoration-none" data-original-title="" title=""
                               aria-describedby="tooltip928528">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title=""
                                      aria-describedby="tooltip611798">SHOP NOW
                                </font>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Promo Image End-->

        <!--Snippets Assets Start-->
        <template id="demo_snippets" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_banner']" position="before">
                <div id="snippet_demo_snippets" class="o_panel">
                    <div class="o_panel_header">
                        <i class="fa fa-th-large"/>
                        Coffee Ecommerce Ultimate 01
                    </div>
                    <div class="o_panel_body">
                        <t t-snippet="theme_coffee_ecommerce_ultimate_01.coffee_sale"
                           t-thumbnail="/theme_coffee_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                        <t t-snippet="theme_coffee_ecommerce_ultimate_01.coffee_promo_image"
                           t-thumbnail="/theme_coffee_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                    </div>
                </div>
            </xpath>
        </template>
        <!--Snippets Assets End-->
    </data>
</odoo>