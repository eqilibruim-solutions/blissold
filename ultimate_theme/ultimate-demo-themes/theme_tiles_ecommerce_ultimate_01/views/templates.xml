<odoo>
    <data>

        <!--Snippet Promo Image Start-->
        <template id="tiles_promo_image" name="Tiles Promo Image">
            <section class="pt64 pb64" id="ecommerce_block_1">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6 col-sm-6 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_tiles_ecommerce_ultimate_01/static/src/img/placeholder-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content px-5">
                                    <h2>
                                        <font style="font-size: 36px;">50% Discounts on new products</font>
                                    </h2>
                                    <p>
                                        <a href="#" class="btn btn-alpha flat">Shop Now</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6 col-sm-6 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_tiles_ecommerce_ultimate_01/static/src/img/placeholder-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content px-5">
                                    <h2>
                                        <font style="font-size: 36px;">Sale 20% Off</font>
                                    </h2>
                                    <p>
                                        <font style="font-size: 18px;">
                                            <a href="#">View More</a>
                                        </font>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Promo Image  End-->

        <!--Snippet Product Sale Start-->
        <template id="tiles_product_sale" name="Tiles Product Sale">
            <section class="pt64 pb64 oe_img_bg oe_custom_bg"
                     style="background-image: url(&quot;/theme_tiles_ecommerce_ultimate_01/static/src/img/placeholder-1170.jpg&quot;);">
                <div class="container">
                    <div class="row justify-content-end">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 right bg-light text-center pt64 pb64">
                            <h2>Tiles &amp;amp; Laminate Flooring</h2>
                            <h1 class="mb32 o_default_snippet_text">10% DISCOUNT</h1>
                            <a href="#" class="text-decoration-none" data-original-title="" title=""
                               aria-describedby="tooltip250793">View More
                                <i class="fa fa-chevron-right"/>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Promo Image  End-->

        <!--Snippets Assets-->
        <template id="demo_snippets" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_banner']" position="before">
                <div id="snippet_demo_snippets" class="o_panel">
                    <div class="o_panel_header">
                        <i class="fa fa-th-large"/>
                        Tiles Ecommerce Ultimate 01
                    </div>
                    <div class="o_panel_body">
                        <t t-snippet="theme_tiles_ecommerce_ultimate_01.tiles_promo_image"
                           t-thumbnail="/theme_tiles_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                        <t t-snippet="theme_tiles_ecommerce_ultimate_01.tiles_product_sale"
                           t-thumbnail="/theme_tiles_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>

                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>