<odoo>
    <data>

        <!--Snippet Image Block Start-->
        <template id="wine_image_block" name="Wine Image Block">
            <section class="pt32 pb32" id="ecommerce_block_1">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-4 col-lg-4 col-sm-12 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_wine_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content px-4">
                                    <h2 style="text-align: right; ">
                                        <font style="color: rgb(255, 255, 255); font-size: 18px;">
                                            <b>SPARKLING WINES</b>
                                        </font>
                                    </h2>
                                    <p style="text-align: right; ">
                                        <font style="color: rgb(255, 255, 255);">The Best Sparkling Wines</font>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 col-sm-12 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_wine_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content px-4">
                                    <h2 style="text-align: center; ">
                                        <font style="color: rgb(255, 255, 255); font-size: 24px;">
                                            <b>SALE</b>
                                            <b>50% OFF</b>
                                        </font>
                                    </h2>
                                    <p style="text-align: center; ">
                                        <b>
                                            <font style="color: rgb(255, 255, 255); font-size: 18px;">BUY NOW</font>
                                        </b>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 col-sm-12 mt8 mb8">
                            <div class="hover_effect">
                                <img class="img-fluid d-block mx-auto"
                                     src="/theme_wine_ecommerce_ultimate_01/static/src/img/placeholder-image-600.jpg"
                                     data-original-title="" title="" aria-describedby="tooltip867057"/>
                                <div class="col-12 img-content px-4">
                                    <h2>
                                        <font style="color: rgb(255, 255, 255); font-size: 18px;">
                                            <b>AMERICAN WINES</b>
                                        </font>
                                    </h2>
                                    <p>
                                        <font style="color: rgb(255, 255, 255);">New American Wines</font>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Image Block End-->

        <!--Snippet Left Content Start-->
        <template id="wine_left_content" name="Wine Left Content">
            <section class="pt64 pb64" style="">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-12 col-sm-6 col-md-12 col-lg-4 bg-alpha p-4">
                            <h2>
                                <font style="color: rgb(255, 255, 255); font-size: 24px;">
                                    <b class="o_default_snippet_text">ON SALE</b>
                                </font>
                            </h2>
                            <p class="mb16 mt16 s_letter_spacing_1 o_default_snippet_text">
                                <font style="color: rgb(255, 255, 255);">Lorem ipsum dolor sit amet, consectetur
                                    adipiscing elit. Pellentesque fermentum est in tortor congue suscipit. Suspendisse
                                    potenti.&amp;nbsp;
                                </font>
                            </p>
                            <a href="#" data-original-title="" title="" aria-describedby="tooltip804008"
                               class="btn btn-outline-beta">
                                <b>
                                    <font style="font-size: 12px;">VIEW MORE</font>
                                </b>
                            </a>
                        </div>
                        <div class="col-12 col-sm-6 col-md-12 col-lg-8 pad0">
                            <img src="/theme_wine_ecommerce_ultimate_01/static/src/img/placeholder-760x211.png"
                                 alt="Image" class="img-fluid mx-auto d-block"
                                 data-original-title="" title="" aria-describedby="tooltip313833"/>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Left Content End-->

        <!--Snippet Newsletter Start-->
        <template id="wine_newsletter" name="Wine Newsletter">
            <section class="pt64 pb32 oe_img_bg oe_custom_bg" id="footer_7"
                     style="background-image: url(&quot;/theme_wine_ecommerce_ultimate_01/static/src/img/placeholder-image-1170.jpg&quot;);">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center mb32">
                            <h3>
                                <b>
                                    <font style="color: rgb(255, 255, 255);">SIGN UP NEWSLETTER</font>
                                </b>
                            </h3>
                            <p>
                                <font style="color: rgb(255, 255, 255);">Lorem ipsum dolor sit amet, consectetur
                                    adipiscing elit sed do eiusmod.
                                </font>
                            </p>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 offset-lg-3 offset-md-3 mb48">
                            <div class="input-group js_subscribe hidden" data-list-id="1" data-subscribe="off">
                                <input type="email" name="email" style="height:50px;"
                                       class="js_subscribe_email form-control br-left" placeholder="your email..."/>
                                <span class="input-group-btn">
                                    <a href="#"
                                       class="btn flat px-3 py-3 btn-primary js_subscribe_btn o_default_snippet_text"
                                       data-original-title="" title="" aria-describedby="tooltip397883">
                                        <font style="color: rgb(255, 255, 255); font-size: 12px;" data-original-title=""
                                              title="" aria-describedby="tooltip7208">
                                            <b>&amp;nbsp;Subscribe&amp;nbsp;</b>
                                        </font>
                                    </a>
                                    <a href="#"
                                       class="btn flat px-3 py-3 btn-success js_subscribed_btn hidden o_default_snippet_text d-none"
                                       disabled="disabled">Thanks
                                    </a>
                                </span>
                                <div class="alert alert-success hidden o_default_snippet_text d-none">Thanks for your
                                    subscription!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!--Snippet Newsletter End-->

        <!--Snippets Assets Start-->
        <template id="demo_snippets" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_banner']" position="before">
                <div id="snippet_demo_snippets" class="o_panel">
                    <div class="o_panel_header">
                        <i class="fa fa-th-large"/>
                        Wine Ecommerce Ultimate 01
                    </div>
                    <div class="o_panel_body">
                        <t t-snippet="theme_wine_ecommerce_ultimate_01.wine_image_block"
                           t-thumbnail="/theme_wine_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                        <t t-snippet="theme_wine_ecommerce_ultimate_01.wine_left_content"
                           t-thumbnail="/theme_wine_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                        <t t-snippet="theme_wine_ecommerce_ultimate_01.wine_newsletter"
                           t-thumbnail="/theme_wine_ecommerce_ultimate_01/static/src/img/snippet-icons/demo-snippet-icon.png"/>
                    </div>
                </div>
            </xpath>
        </template>
        <!--Snippets Assets End-->
    </data>
</odoo>