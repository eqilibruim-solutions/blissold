<odoo>

    <!-- ======== Vertical Menu ======== -->
    <!-- Snippet's Body -->
    <template id="vertical_category_menu" name="Vertical Mega Menu">
        <section class="vertical_category_menu_no_image">
            <div class="row">
                <div class="col-md-3 vertical_category_menu mt16 mb16">
                    <div class="category-title"><i class="fa fa-bars"></i>All
                        Category
                    </div>
                    <div class="container category-content">
                        <ul id="category_menu"></ul>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- ======== Vertical Menu with Image ======== -->
    <!-- Snippet's Body -->
    <template id="vertical_category_menu_image"
              name="Vertical Mega Menu with Image">
        <section class="vertical_category_menu_image">
            <div class="row">
                <div class="col-md-3 col-sm-3 hidden-xs vertical_category_menu mt16 mb16">
                    <div class="category-title"><i class="fa fa-bars"/>All
                        Category
                    </div>
                    <div class="container category-content category-content-image">
                        <ul id="category_menu">
                        </ul>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 oe_structure mt16 mb16">
                    <img class="img-fluid"
                         src="/website/static/src/img/backgrounds/type.jpg"
                         alt="Background Image"/>
                </div>
            </div>
        </section>
    </template>

    <!-- Snippet's Options -->
    <template id="vertical_category_menu_option"
              inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-js='vertical_category_menu'
                 data-selector=".vertical_category_menu">

                <we-collapse-area>
                    <we-toggler>
                        <i class="fa fa-filter"/>
                        Vertical Mega Menu Options
                    </we-toggler>
                    <we-collapse>
                        <we-button href="#"
                                   data-add_category="true">
                            <a>Add Category</a>
                        </we-button>
                    </we-collapse>
                </we-collapse-area>


            </div>

            <div data-js='vertical_category_menu'
                 data-selector="ul#category_menu > li:has(a)">

                <we-button
                        data-add_sub_page="true" href="#">
                    <a>Add Sub Page</a>
                </we-button>

            </div>
        </xpath>
    </template>

